<Page x:Class="StepApp.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StepApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Background="LightBlue">
        <StackPanel Margin="10">
            <Button Content="Edit Profile" Width="200" Margin="5"/>
            <Button Content="Change Password" Width="200" Margin="5"/>
            <Button Content="Add/Delete Credit Card" Width="200" Margin="5"/>
            <Button Content="View History" Width="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
